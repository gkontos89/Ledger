<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/start_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="startService"/>

        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HELLO"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/init_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Init Timer"/>
        <Button
            android:id="@+id/start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Timer"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/pause_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pause Timer"/>
        <Button
            android:id="@+id/resume_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resume Timer"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/stop_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="stop Timer"/>
        <Button
            android:id="@+id/set_day_rate_05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set Day Rate 0.5s"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/set_day_rate_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set Day Rate 1s"/>
        <Button
            android:id="@+id/get_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get Time"/>
    </LinearLayout>

    <TextView
        android:id="@+id/recurring_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hello"
        android:textSize="40sp"/>
    <TextView
        android:id="@+id/get_time_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hello"
        android:textSize="40sp"/>









</LinearLayout>